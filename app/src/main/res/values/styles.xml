<?xml version="1.0" encoding="utf-8"?>
<resources>
                        <!--VIEW-->
    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="rv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">?actionBarSize</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="spanCount">3</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>
</resources>